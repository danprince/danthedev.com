{
  "private": true,
  "url": "https://danthedev.com",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development run-s clean build:ts && run-p watch:*",
    "build": "NODE_ENV=production run-s clean build:ts build:site",
    "clean": "rm -rf _site",
    "watch:site": "eleventy --serve --quiet --config=eleventy.config.cjs",
    "build:site": "eleventy --config=eleventy.config.cjs",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch --preserveWatchOutput"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@types/node": "^18.11.18",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-attrs": "^4.1.0",
    "markdown-it-link-attributes": "^3.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "preact-render-to-string": "^5.2.6",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "preact": "^10.11.3"
  },
  "importMap": {
    "imports": {
      "preact": "https://esm.sh/preact@10.11.3",
      "preact/hooks": "https://esm.sh/preact@10.11.3/hooks",
      "preact/compat": "https://esm.sh/preact@10.11.3/compat",
      "preact/jsx-runtime": "https://esm.sh/preact@10.11.3/jsx-runtime"
    }
  },
  "devImportMap": {
    "imports": {
      "preact": "https://esm.sh/preact@10.11.3?dev",
      "preact/hooks": "https://esm.sh/preact@10.11.3/hooks?dev",
      "preact/compat": "https://esm.sh/preact@10.11.3/compat?dev",
      "preact/jsx-runtime": "https://esm.sh/preact@10.11.3/jsx-runtime?dev"
    }
  }
}
